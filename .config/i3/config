# move focused workspace to opposite screen
bindsym $mod+Shift+o move workspace to output    left

# lock screen
bindsym $win+l exec "lock"
# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
        bindsym Left  resize shrink width  1 px or 1 ppt
        bindsym Down  resize grow   height 1 px or 1 ppt
        bindsym Up    resize shrink height 1 px or 1 ppt
        bindsym Right resize grow   width  1 px or 1 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $win+r mode "resize"


set $chat 1
set $game 2

# Media Controls
mode "volume-game" {
        bindsym Up     exec pactl set-sink-volume $game +1%
        bindsym Down   exec pactl set-sink-volume $game -1%
        bindsym m      exec pactl set-sink-mute   $game toggle
        bindsym r      exec pactl set-sink-volume $game 0%
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym g      mode "volume-game"
        bindsym $win+g mode "volume-game"
        bindsym c      mode "volume-chat"
        bindsym $win+c mode "volume-chat"
        bindsym v      mode "volume"
        bindsym $win+v mode "volume"
}

mode "volume-chat" {
        bindsym Up     exec pactl set-sink-volume $chat +1%
        bindsym Down   exec pactl set-sink-volume $chat -1%
        bindsym m      exec pactl set-sink-mute   $chat toggle
        bindsym r      exec pactl set-sink-volume $chat 0%
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym g      mode "volume-game"
        bindsym $win+g mode "volume-game"
        bindsym c      mode "volume-chat"
        bindsym $win+c mode "volume-chat"
        bindsym v      mode "volume"
        bindsym $win+v mode "volume"
}

mode "volume" {
        bindsym Up     exec pactl set-sink-volume $chat +1%    && pactl set-sink-volume $game +1%
        bindsym Down   exec pactl set-sink-volume $chat -1%    && pactl set-sink-volume $game -1%
        bindsym m      exec pactl set-sink-mute   $chat toggle && pactl set-sink-mute   $game toggle
        bindsym r      exec pactl set-sink-volume $chat 0%     && pactl set-sink-volume $game 0%
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym g      mode "volume-game"
        bindsym $win+g mode "volume-game"
        bindsym c      mode "volume-chat"
        bindsym $win+c mode "volume-chat"
}

bindsym $win+v     mode "volume"
bindsym $win+p     exec spotify-control toggle
bindsym $win+Right exec spotify-control next
bindsym $win+Left  exec spotify-control prev
bindsym $win+Up    exec pactl set-sink-volume $chat +1% && pactl set-sink-volume $game +1%
bindsym $win+Down  exec pactl set-sink-volume $chat -1% && pactl set-sink-volume $game -1%

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status -c ~/.config/i3status/config
}

# Autostart Applications
exec --startup-id i3-msg 'workspace Internet; exec /usr/bin/google-chrome; move workspace to primary'
exec --no-startup-id i3-msg 'workspace Mail; exec /usr/bin/evolution; move workspace to DVI-I-1'
#move Mail to output left
exec --no-startup-id i3-msg 'workspace Teams; exec /usr/local/bin/teams; move workspace to DVI-I-1'

exec /usr/libexec/notification-daemon
exec xautolock -time 15 -locker "lock"

# No Border Around Certain Windows
for_window [class="^.*chrome.*"] border pixel 1
for_window [class="^.*Firefox.*"] border pixel 1
for_window [class="^.*Evolution.*"] border pixel 1
for_window [class="^.*Minipanel.*"] move container to workspace "Minipanel"
